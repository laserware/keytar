{
  "name": "@laserware/keytar",
  "version": "2.0.0",
  "description": "Handle keyboard and mouse events in the browser.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "url": "https://github.com/laserware/keytar.git",
    "type": "git"
  },
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "keywords": [
    "keyboard"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.build.json && pnpm format:build",
    "prepublishOnly": "npm run build",
    "preversion": "pnpm lint && pnpm typecheck",
    "version": "pnpm format && git add -A src",
    "postversion": "git push && git push --tags",
    "format": "prettier --cache --write \"src/**/**.ts\"",
    "format:build": "prettier --cache --write \"dist/**/**.{js,ts}\"",
    "lint": "eslint --cache src",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@laserware/arcade": "^2.2.1"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^1.2.0",
    "@rushstack/eslint-patch": "^1.6.1",
    "@vitest/coverage-istanbul": "^1.1.0",
    "eslint": "^8.56.0",
    "happy-dom": "^12.10.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "prettier": {
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.test.ts",
        "options": {
          "printWidth": 100
        }
      }
    ]
  }
}
