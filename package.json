{
  "name": "@laserware/keytar",
  "version": "3.0.0-beta.2",
  "description": "Handle keyboard and mouse events in the browser.",
  "browser": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "repository": {
    "url": "git+https://github.com/laserware/keytar.git",
    "type": "git"
  },
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "keywords": [
    "keyboard"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup && cd dist && npx prettier --write .",
    "prepublishOnly": "npm run build",
    "preversion": "npm run eslint && npm run typecheck",
    "version": "npm run prettier && git add -A src",
    "postversion": "git push && git push --tags",
    "eslint": "eslint --cache src",
    "prettier": "prettier --cache --write src",
    "prettier:ci": "prettier --check src",
    "typecheck": "tsc --noEmit",
    "vitest": "vitest"
  },
  "dependencies": {
    "@laserware/arcade": "^3.4.1"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^3.2.2",
    "@vitest/coverage-istanbul": "^2.0.4",
    "eslint": "8.57.0",
    "jsdom": "^24.1.1",
    "prettier": "^3.3.3",
    "tslib": "^2.6.3",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4"
  },
  "prettier": {
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.test.ts",
        "options": {
          "printWidth": 100
        }
      }
    ]
  }
}
